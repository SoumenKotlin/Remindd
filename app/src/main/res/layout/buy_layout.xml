<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/ten_reminder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C9CFD5"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Reminders"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            style="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upto 10 Location"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="53dp"
            android:background="#70000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120.00"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#70000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:background="@drawable/round_shape"

            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tweenty_reminder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C9CFD5"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ten_reminder">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Reminders"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upto 20 Location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="53dp"
            android:background="#70000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$300.00"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#70000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:background="@drawable/round_shape"
            android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C9CFD5"
        android:orientation="horizontal"
        android:layout_below="@+id/tweenty_reminder"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlimited Reminders"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Unlimited Location"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#70000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$620.00"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#70000000"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
           android:background="@drawable/round_shape"
            android:textColor="#ffffff"/>


    </LinearLayout>



</RelativeLayout>